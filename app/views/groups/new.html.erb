<% provide(:title, "New Group") %>
<h1>Create new group</h1>

<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<%= form_for(@group) do |f| %>
			<%= render("shared/error_messages")  %>
			<%= f.label :name %>
			<%= f.text_field :name, class: "form-control" %>

			<%= f.submit "Create group", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>