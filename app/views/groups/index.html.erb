
<% provide(:title, "My Groups") %>

<h1>My Groups</h1>

<div class="row">
	<div class="col-md-4 offset-md-4">
		<% my_groups = Group.joins(:memberships).where("memberships.user_id = #{current_user.id}") %>
		<ul>
			<% my_groups.each do |group| %>
				<li>
					<% temp = Group.find_by(id: group.id) %>
					<%= link_to group.name, group_path(temp) %>
				</li>
			<% end %>
		</ul>	
	</div>
</div>