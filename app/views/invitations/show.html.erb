<% provide(:title, "Invitations") %>

<h1>Invitations</h1>

<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<% result = Invitation.joins(:group).select(:id, :group_id, :name).where(accepted: false, receiver_id: current_user.id) %>
		<ul>
			<div class="row">
				<% result.each do |i| %>
					<li>
						<%= form_for(:invite, url: respond_path) do |f| %>
							<%= f.hidden_field :group_id, :value => i["group_id"].to_i %>
							<%= f.hidden_field :id, :value => i["id"].to_i %>
							<div class="col-md-6">
								<%= i["name"] %>
							</div>
							<div class="col-md-3">
								<%= f.submit "Yes", class: "btn btn-primary" %>
							</div>
							<div class="col-md-3">
								<%= f.submit "No", class: "btn btn-primary" %>
							</div>
						<% end %>
					</li>
				<% end %>
			</div>
		</ul>
	</div>
</div>